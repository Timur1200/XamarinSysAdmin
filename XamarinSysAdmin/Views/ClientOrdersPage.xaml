<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             Title="Запросы"
             x:Class="XamarinSysAdmin.Views.ClientOrdersPage">
             
    
    <ContentPage.ToolbarItems>
        <ToolbarItem Text="Создать" Clicked="NewOrderClick"  />
        
    </ContentPage.ToolbarItems>

    <ContentPage.Content>
        <StackLayout>
            <ListView ItemSelected="LView_ItemSelected" x:Name="LView" HasUnevenRows="True">
                <ListView.ItemTemplate>
                    <DataTemplate>
                        <ViewCell>
                            <StackLayout>
                                <Label Margin="5"  FontSize="Title" HorizontalOptions="Center" Text="{Binding Theme}"></Label>
                                <Label Margin="5" FontSize="30" HorizontalOptions="Center" Text="{Binding StatusText}"></Label>
                                <Label Margin="5" FontSize="30" HorizontalOptions="Center" Text="{Binding Date1D}"></Label>
                            </StackLayout>
                        </ViewCell>
                    </DataTemplate>

                </ListView.ItemTemplate>

            </ListView>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>